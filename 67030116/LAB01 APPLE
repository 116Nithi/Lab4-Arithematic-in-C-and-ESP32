    ESP_LOGI(TAG, "üìö ‡∏™‡∏¥‡πà‡∏á‡∏ó‡∏µ‡πà‡πÄ‡∏£‡∏µ‡∏¢‡∏ô‡∏£‡∏π‡πâ:");
    ESP_LOGI(TAG, "   1. ‡∏Å‡∏≤‡∏£‡∏ö‡∏ß‡∏Å‡πÄ‡∏•‡∏Ç (Addition): a + b = c");
    ESP_LOGI(TAG, "   2. ‡∏Å‡∏≤‡∏£‡πÉ‡∏ä‡πâ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£ (Variables) ‡πÄ‡∏Å‡πá‡∏ö‡∏Ñ‡πà‡∏≤");
    ESP_LOGI(TAG, "   3. ‡∏Å‡∏≤‡∏£‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏î‡πâ‡∏ß‡∏¢ ESP_LOGI");
    ESP_LOGI(TAG, "   4. ‡∏Å‡∏≤‡∏£‡πÅ‡∏Å‡πâ‡πÇ‡∏à‡∏ó‡∏¢‡πå‡πÅ‡∏ö‡∏ö‡∏°‡∏µ‡∏Ç‡∏±‡πâ‡∏ô‡∏ï‡∏≠‡∏ô");
    ESP_LOGI(TAG, "");
    
    ESP_LOGI(TAG, "üéâ ‡∏à‡∏ö‡πÇ‡∏õ‡∏£‡πÅ‡∏Å‡∏£‡∏°‡∏ô‡∏±‡∏ö‡πÅ‡∏≠‡∏õ‡πÄ‡∏õ‡∏¥‡πâ‡∏•‡∏Ç‡∏≠‡∏á‡πÅ‡∏°‡πà!");
    ESP_LOGI(TAG, "üìñ ‡∏≠‡πà‡∏≤‡∏ô‡∏ï‡πà‡∏≠‡πÉ‡∏ô‡πÇ‡∏õ‡∏£‡πÄ‡∏à‡∏Ñ‡∏ñ‡∏±‡∏î‡πÑ‡∏õ: 02_subtraction_toys");
    
