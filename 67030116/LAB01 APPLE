    int example2_new = 5;
    int example2_total = example2_old + example2_new;
    ESP_LOGI(TAG, "   ‡∏ñ‡πâ‡∏≤‡πÅ‡∏°‡πà‡∏°‡∏µ‡πÅ‡∏≠‡∏õ‡πÄ‡∏õ‡∏¥‡πâ‡∏• %d ‡∏ú‡∏• ‡πÅ‡∏•‡∏∞‡πÑ‡∏î‡πâ‡∏°‡∏≤‡πÄ‡∏û‡∏¥‡πà‡∏° %d ‡∏ú‡∏•", example2_old, example2_new);
    ESP_LOGI(TAG, "   ‡∏à‡∏∞‡πÑ‡∏î‡πâ‡πÅ‡∏≠‡∏õ‡πÄ‡∏õ‡∏¥‡πâ‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î %d + %d = %d ‡∏ú‡∏•", example2_old, example2_new, example2_total);
