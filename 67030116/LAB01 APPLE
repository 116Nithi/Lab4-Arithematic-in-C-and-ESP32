    ESP_LOGI(TAG, "‚úÖ ‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö:");
    ESP_LOGI(TAG, "   ‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÅ‡∏°‡πà‡∏°‡∏µ‡πÅ‡∏≠‡∏õ‡πÄ‡∏õ‡∏¥‡πâ‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î %d ‡∏ú‡∏•", total_apples);
    ESP_LOGI(TAG, "");
    
