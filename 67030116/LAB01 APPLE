    ESP_LOGI(TAG, "   ‡πÅ‡∏≠‡∏õ‡πÄ‡∏õ‡∏¥‡πâ‡∏•‡πÄ‡∏î‡∏¥‡∏°: üçéüçéüçéüçé (%d ‡∏ú‡∏•)", apples_already_have);
    ESP_LOGI(TAG, "   ‡πÅ‡∏≠‡∏õ‡πÄ‡∏õ‡∏¥‡πâ‡∏•‡πÉ‡∏´‡∏°‡πà: üçéüçé (%d ‡∏ú‡∏•)", apples_new_today);
    ESP_LOGI(TAG, "   ‡∏£‡∏ß‡∏°:    üçéüçéüçéüçéüçéüçé (%d ‡∏ú‡∏•)", total_apples);
    ESP_LOGI(TAG, "");
    
    // ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ï‡∏¥‡∏°
    ESP_LOGI(TAG, "üí° ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ï‡∏¥‡∏°:");
    
    // ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ó‡∏µ‡πà 1
    int example1_old = 7;
    int example1_new = 3;
    int example1_total = example1_old + example1_new;
    ESP_LOGI(TAG, "   ‡∏ñ‡πâ‡∏≤‡πÅ‡∏°‡πà‡∏°‡∏µ‡πÅ‡∏≠‡∏õ‡πÄ‡∏õ‡∏¥‡πâ‡∏• %d ‡∏ú‡∏• ‡πÅ‡∏•‡∏∞‡πÑ‡∏î‡πâ‡∏°‡∏≤‡πÄ‡∏û‡∏¥‡πà‡∏° %d ‡∏ú‡∏•", example1_old, example1_new);
    ESP_LOGI(TAG, "   ‡∏à‡∏∞‡πÑ‡∏î‡πâ‡πÅ‡∏≠‡∏õ‡πÄ‡∏õ‡∏¥‡πâ‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î %d + %d = %d ‡∏ú‡∏•", example1_old, example1_new, example1_total);
    ESP_LOGI(TAG, "");
    
